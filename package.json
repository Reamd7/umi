{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsx ./scripts/build.ts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.0.23",
    "lint-staged": "^10.2.11",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "^2.1.0",
    "typescript": "5.4.3",
    "yorkie": "^2.0.0",
    "shelljs": "0.8.5",
    "@types/shelljs": "0.8.15",
    "tsx": "4.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umijs/umi.git"
  }
}
